<svg width="400" height="200" xmlns="http://www.w3.org/2000/svg">
  <!-- Dark Background -->
  <rect width="100%" height="100%" fill="#1c1c1c" />

  <!-- Fire Gradient -->
  <defs>
    <linearGradient id="fireGrad" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#ff6f00;stop-opacity:1" />
      <stop offset="50%" style="stop-color:#ff4500;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#ff0000;stop-opacity:1" />
    </linearGradient>

    <!-- Glow Effect -->
    <filter id="glow" x="-50%" y="-50%" width="200%" height="200%">
      <feGaussianBlur in="SourceGraphic" stdDeviation="6" result="blurred" />
      <feMerge>
        <feMergeNode in="blurred" />
        <feMergeNode in="SourceGraphic" />
      </feMerge>
    </filter>
  </defs>

  <!-- Text with Fire Effect -->
  <text x="50%" y="50%" font-family="'Arial Black', Arial, sans-serif" font-size="60" fill="url(#fireGrad)" text-anchor="middle" alignment-baseline="middle" filter="url(#glow)" stroke="#000" stroke-width="2px">
    FREEZZZ
  </text>
</svg>